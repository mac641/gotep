# Editor configuration, see https://editorconfig.org
# !! Place inside project root!!
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
